{
  "type": "module",
  "name": "@anchorlib/storage",
  "version": "1.0.0-beta.18",
  "description": "Persistent storage solutions for Anchor state management",
  "keywords": ["state", "management", "reactive", "observable", "storage"],
  "author": "Nanang Mahdaen El Agung <mahdaen@gmail.com>",
  "homepage": "https://github.com/beerush-id/anchor",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beerush-id/anchor.git"
  },
  "bugs": {
    "url": "https://github.com/beerush-id/anchor/issues"
  },
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./db": {
      "types": "./dist/db/index.d.ts",
      "import": "./dist/db/index.js"
    }
  },
  "files": ["dist"],
  "directories": {
    "dist": "./dist"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@anchorlib/core": "workspace:*"
  },
  "devDependencies": {
    "@beerush/utils": "^0.5.0",
    "@biomejs/biome": "catalog:",
    "@playwright/test": "^1.54.2",
    "@types/bun": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "fake-indexeddb": "^6.1.0",
    "jsdom": "catalog:",
    "publint": "catalog:",
    "rimraf": "catalog:",
    "tsdown": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "typescript": "catalog:lib"
  },
  "scripts": {
    "dev": "rimraf dist && tsdown --watch",
    "clean": "rimraf dist",
    "build": "rimraf dist && tsdown && publint",
    "format": "biome format --write",
    "prepublish": "rimraf dist && tsdown && publint",
    "test": "rimraf coverage && vitest --run",
    "test:preview": "rimraf coverage && vitest --run && vite preview --outDir coverage",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui"
  },
  "optionalDependencies": {
    "zod": "catalog:lib"
  }
}
