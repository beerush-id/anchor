{
  "type": "module",
  "name": "@anchor/storage",
  "version": "1.0.0-beta.1",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./db": {
      "types": "./dist/db/index.d.ts",
      "import": "./dist/db/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "directories": {
    "dist": "./dist"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@anchor/core": "workspace:*"
  },
  "devDependencies": {
    "@beerush/utils": "^0.5.0",
    "@eslint/css": "^0.5.0",
    "@eslint/js": "^9.23.0",
    "@eslint/markdown": "^6.3.0",
    "@playwright/test": "^1.54.2",
    "@types/bun": "^1.2.19",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.23.0",
    "eslint-plugin-prettier": "^5.2.3",
    "fake-indexeddb": "^6.1.0",
    "prettier": "^3.5.3",
    "publint": "^0.3.9",
    "rimraf": "^6.0.1",
    "tsup": "^8.4.0",
    "typescript-eslint": "^8.27.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5.8.2"
  },
  "scripts": {
    "dev": "rimraf dist && tsup --watch",
    "clean": "rimraf dist",
    "build": "rimraf dist && tsup && publint",
    "format": "prettier --write .",
    "prepublish": "rimraf dist && tsup && publint",
    "test": "rimraf coverage && vitest --run",
    "test:preview": "rimraf coverage && vitest --run && vite preview --outDir coverage",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui"
  },
  "license": "MIT",
  "optionalDependencies": {
    "zod": "^4.0.17"
  }
}
