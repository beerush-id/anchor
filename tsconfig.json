{
  "compilerOptions": {
    "outDir": "./lib/esm",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "sourceMap": false,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [ "./src" ],
  "exclude": [ "node_modules", "**/*.spec.ts", "jest.config.js" ]
}
