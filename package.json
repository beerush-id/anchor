{
  "name": "anchor",
  "type": "module",
  "version": "0.0.1",
  "description": "Reactive State Management for Javascript",
  "scripts": {
    "dev": "bpkg run dev",
    "dev:core": "bpkg run dev -f packages/core",
    "dev:docs": "bpkg run dev -f apps/docs",
    "dev:react": "bpkg run dev -f apps/react",
    "build": "bpkg run build",
    "format": "bpkg run format",
    "lint": "bpkg run lint",
    "test": "rimraf coverage && vitest --run",
    "test:preview": "rimraf coverage && vitest --run && vite preview --outDir coverage",
    "prepare": "husky"
  },
  "devDependencies": {
    "@beerush/esdev": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "monopkg": "^0.3.10",
    "prettier": "^3.2.5",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6",
    "vitepress": "^1.0.0-rc.22",
    "vitest": "^3.2.4",
    "vue": "^3.3.6"
  },
  "engines": {
    "bun": ">=1.2.15"
  },
  "packageManager": "bun@1.2.15",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "author": "Nanang Mahdaen El Agung <mahdaen@gmail.com>",
  "homepage": "https://github.com/beerush-id/anchor",
  "license": "MIT",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "typings": "lib/esm/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beerush-id/anchor.git"
  },
  "bugs": {
    "url": "https://github.com/beerush-id/anchor/issues"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
